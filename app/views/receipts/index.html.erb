<p id="notice"><%= notice %></p>

<h1>Receipts</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Store</th>
      <th>Base amount</th>
      <th>Tax amount</th>
      <th>Total amount</th>
      <th>Purchased at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receipts.each do |receipt| %>
      <tr>
        <td><%= receipt.store %></td>
        <td><%= receipt.base_amount %></td>
        <td><%= receipt.tax_amount %></td>
        <td><%= receipt.total_amount %></td>
        <td><%= receipt.purchased_on %></td>
        <td><%= link_to 'Show', receipt %></td>
        <td><%= link_to 'Edit', edit_receipt_path(receipt) %></td>
        <td><%= link_to 'Destroy', receipt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Receipt', new_receipt_path, :class => 'btn btn-primary' %>
